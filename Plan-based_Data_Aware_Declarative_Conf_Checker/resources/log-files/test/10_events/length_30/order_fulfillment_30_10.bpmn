<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
             xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC"
             xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI"
             xmlns:activiti="http://activiti.org/bpmn"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath"
             targetNamespace="http://www.example.org/orderProcess">

  <process id="order_fulfillment_process" name="Customer Order Fulfillment" isExecutable="true">

    <!-- Start Event -->
    <startEvent id="start_event" name="Order Received" />
    <sequenceFlow id="flow1" sourceRef="start_event" targetRef="task1" />

    <!-- Task 1: Receive Order -->
    <task id="task1" name="Processing Customer Order" />
    <sequenceFlow id="flow2" sourceRef="task1" targetRef="gateway1" />

    <!-- Exclusive Gateway 1: Validate Order (Decides if order can proceed) -->
    <exclusiveGateway id="gateway1" name="Validate Order" />
    <sequenceFlow id="flow3" sourceRef="gateway1" targetRef="task2" name="Order Valid" />
    <sequenceFlow id="flow4" sourceRef="gateway1" targetRef="task3" name="Order Invalid" />

    <!-- Task 2: Validate Order Details (If Order is Valid) -->
    <task id="task2" name="Validate Order Details" />
    <sequenceFlow id="flow5" sourceRef="task2" targetRef="task4" />

    <!-- Task 3: Handle Invalid Order (Optional Path) -->
    <task id="task3" name="Handle Invalid Order" />
    <sequenceFlow id="flow6" sourceRef="task3" targetRef="task4" />

    <!-- Task 4: Notify Customer of Stock Availability -->
    <task id="task4" name="Notify Customer of Stock Availability" />
    <sequenceFlow id="flow7" sourceRef="task4" targetRef="gateway2" />

    <!-- Exclusive Gateway 2: Check Payment Option (Decides Payment Type) -->
    <exclusiveGateway id="gateway2" name="Check Payment Option" />
    <sequenceFlow id="flow8" sourceRef="gateway2" targetRef="task5" name="Cash on Delivery" />
    <sequenceFlow id="flow9" sourceRef="gateway2" targetRef="task6" name="Online Payment" />

    <!-- Task 5: Process Cash on Delivery Payment -->
    <task id="task5" name="Process Cash on Delivery Payment" />
    <sequenceFlow id="flow10" sourceRef="task5" targetRef="task7" />

    <!-- Task 6: Process Online Payment -->
    <task id="task6" name="Process Online Payment" />
    <sequenceFlow id="flow11" sourceRef="task6" targetRef="task7" />

    <!-- Task 7: Confirm Payment -->
    <task id="task7" name="Confirm Payment" />
    <sequenceFlow id="flow12" sourceRef="task7" targetRef="gateway3" />

    <!-- Exclusive Gateway 3: Payment Success or Failure (Decides if payment succeeded) -->
    <exclusiveGateway id="gateway3" name="Payment Status" />
    <sequenceFlow id="flow13" sourceRef="gateway3" targetRef="task8" name="Payment Successful" />
    <sequenceFlow id="flow14" sourceRef="gateway3" targetRef="task9" name="Payment Failed" />

    <!-- Task 8: Notify Customer of Successful Payment -->
    <task id="task8" name="Notify Customer of Successful Payment" />
    <sequenceFlow id="flow15" sourceRef="task8" targetRef="task10" />

    <!-- Task 9: Handle Payment Failure -->
    <task id="task9" name="Handle Payment Failure" />
    <sequenceFlow id="flow16" sourceRef="task9" targetRef="task10" />

    <!-- Task 10: Prepare Order for Shipment -->
    <task id="task10" name="Prepare Order for Shipment" />
    <sequenceFlow id="flow17" sourceRef="task10" targetRef="task11" />

    <!-- Task 11: Notify Customer of Shipment Status -->
    <task id="task11" name="Notify Customer of Shipment Status" />
    <sequenceFlow id="flow18" sourceRef="task11" targetRef="gateway4" />

    <!-- Exclusive Gateway 4: Shipping Available or Not -->
    <exclusiveGateway id="gateway4" name="Shipping Availability" />
    <sequenceFlow id="flow19" sourceRef="gateway4" targetRef="task12" name="Shipping Available" />
    <sequenceFlow id="flow20" sourceRef="gateway4" targetRef="task13" name="Shipping Unavailable" />

    <!-- Task 12: Ship Order -->
    <task id="task12" name="Ship Order" />
    <sequenceFlow id="flow21" sourceRef="task12" targetRef="task14" />

    <!-- Task 13: Notify Customer of Shipping Unavailability -->
    <task id="task13" name="Notify Customer of Shipping Unavailability" />
    <sequenceFlow id="flow22" sourceRef="task13" targetRef="task14" />

    <!-- Task 14: Confirm Delivery -->
    <task id="task14" name="Confirm Delivery" />
    <sequenceFlow id="flow23" sourceRef="task14" targetRef="task15" />

    <!-- Task 15: Send Feedback Request -->
    <task id="task15" name="Send Feedback Request" />
    <sequenceFlow id="flow24" sourceRef="task15" targetRef="end_event" />

    <!-- End Event -->
    <endEvent id="end_event" name="Process Complete" />

  </process>

</definitions>
